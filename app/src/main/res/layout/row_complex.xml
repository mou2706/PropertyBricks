<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:elevation="20dp">
        <LinearLayout
            android:id="@+id/lin_itemview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp">
            <TextView
                android:id="@+id/tv_complexname"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green Valley Complex"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:background="@color/light_colorText"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                >

            <ImageView
                android:adjustViewBounds="true"
                android:layout_weight="0.6"
                android:id="@+id/complex_image"
                android:layout_marginLeft="@dimen/_4sdp"
               android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/man"
                android:scaleType="centerCrop"
                android:background="@drawable/counter_design"
               />
                <LinearLayout
                    android:layout_weight="1.4"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <TextView
                        android:textSize="@dimen/_8ssp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/tv_complexlocation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Location"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                           >

                        <TextView
                            android:id="@+id/view_property"
                            android:singleLine="true"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:gravity="center"
                        android:background="@drawable/view_property"
                        android:layout_marginRight="@dimen/_4sdp"

                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_7ssp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:text="View Property"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:textColor="@color/white"/>
                        </LinearLayout>
                    <RelativeLayout

                        android:layout_weight="1"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    >

                        <ImageView
                            android:id="@+id/iv_addproperty_complex"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="22dp"
                            android:layout_marginRight="22dp"
                            android:background="@drawable/add_pro_white"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_add" />

                    <TextView


                        android:background="@drawable/light_to_superlight"
                    android:layout_toLeftOf="@+id/iv_addproperty_complex"
                    android:id="@+id/tv_addproperty_complex"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="ADD PROPERTY"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"

                    />
                    </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>