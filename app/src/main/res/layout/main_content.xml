<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/light_colorText"/>
            <TextView
                android:id="@+id/tv_complexname"
                android:textColor="@color/dark_colorText"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Lists of Properties"
                android:textAllCaps="false"
                android:textSize="@dimen/_13ssp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/tv_property"
                android:textSize="@dimen/_13ssp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/dark_colorText"
                android:text="Property"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_complex"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/counter_design"
                android:text="Complex"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/dark_colorText"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>