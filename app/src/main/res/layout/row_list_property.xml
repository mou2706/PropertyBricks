<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lin_property_underComplex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:orientation="horizontal">

                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/propertyimage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/home"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAllCaps="true"
                        android:id="@+id/propertyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AB360"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="@color/light_colorText"/>
                    <View
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/light_colorText"></View>
                    <TextView
                        android:id="@+id/propertylocation"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="location"
                        android:textSize="@dimen/_8ssp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tenants_details"
                android:paddingRight="@dimen/_20sdp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <View
                    android:layout_width="0.9dp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/back"></View>
                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/tenant_pic"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:src="@drawable/man"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp" />
                <LinearLayout
                    android:paddingLeft="@dimen/_4sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <TextView
                        android:textAllCaps="true"
                        android:id="@+id/tenant_nam"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/dark_colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"/>
                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/back"></View>

                    <TextView
                        android:id="@+id/tenant_entry_date"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_7ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2015 to 2025"/>
                    <TextView
                        android:id="@+id/tenant_viewdetails"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:textSize="@dimen/_7ssp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:text="View Details"
                        android:gravity="center"
                        android:background="@drawable/add_btn"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <FrameLayout
            android:visibility="gone"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp">
            <ImageView
                android:id="@+id/add_property"
                android:padding="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/add_btn"
                android:src="@drawable/ic_add_black_24dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp">
            <ImageView
                android:id="@+id/deleteproperty"
                android:padding="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/add_btn"
                android:src="@drawable/remove"/>
        </FrameLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>