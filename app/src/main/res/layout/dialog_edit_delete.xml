<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/counter_design"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txt_dia"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select One"
                android:background="@color/dark_colorText"
                android:cursorVisible="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rel_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/edit_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="@color/dark_colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/edit_dialog"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_edit_black_24dp"/>
                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/dark_colorText"></View>

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rel_remove"

                    android:paddingTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/delete_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textColor="@color/dark_colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/delete_dialog"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_remove_black_24dp"/>
                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/dark_colorText"></View>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rel_remove_tenant"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove Tenant"
                        android:textColor="@color/dark_colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"/>
                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>