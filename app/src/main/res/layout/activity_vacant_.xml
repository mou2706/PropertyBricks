<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vacant_Activity.Vacant_Activity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:background="@drawable/add_pro_white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:id="@+id/iv_vacant_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back_green_24dp"/>
                <TextView
                    android:paddingLeft="@dimen/_5sdp"
                    android:id="@+id/txt_designer_name"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_colorText"
                    android:textSize="@dimen/_15ssp"
                    android:text="Tenant" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_colorText"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingBottom="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_8sdp"
                    >
                    <TextView
                        android:id="@+id/tv_personal1"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/dark_colorText"
                        android:text="Personal"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_business1"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="Business"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@color/dark_colorText"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fram_layout"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></FrameLayout>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    >
                    <TextView
                        android:background="@drawable/add_btn"
                        android:id="@+id/tv_personal_submit"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <com.github.ybq.android.spinkit.SpinKitView
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/spin_kit2_jj"
                        style="@style/SpinKitView.Large.ThreeBounce"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:SpinKit_Color="@color/white" />


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>