<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_2sdp"
            android:elevation="20dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

            <RelativeLayout
                android:background="@color/light_colorText"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/picture_outline"
                    android:id="@+id/profile_img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/man"/>
                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/tenant_property_name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_below="@+id/profile_img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Property Name"
                    android:gravity="center"
                    android:background="@drawable/counter_design"
                    android:textColor="@color/dark_colorText"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:id="@+id/lin"
                    android:padding="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <ImageView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/acess"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_accessibility_black_24dp"/>
                    <TextView
                        android:id="@+id/tenant_name"
                        android:layout_toRightOf="@+id/acess"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Arindam Kundu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_13ssp"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <ImageView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/location"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_location_on_black_24dp"/>

                    <TextView
                        android:id="@+id/tenant_address"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/location"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/white"
                        android:text="Location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <ImageView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/phone"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                    <TextView
                        android:id="@+id/tenant_phone"
                        android:layout_toRightOf="@+id/phone"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/white"
                        android:text="Mobile number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <ImageView
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/mail"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_email_black_24dp"/>

                        <TextView
                            android:id="@+id/tenant_email"
                            android:layout_toRightOf="@+id/mail"
                        android:gravity="center_vertical"

                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/white"
                        android:text="email id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/tv_view_details_tenants"
                android:text="View details"
                android:textAllCaps="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="0.3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_property"/>

           </LinearLayout>
        </android.support.v7.widget.CardView>



</RelativeLayout>