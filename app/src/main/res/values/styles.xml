<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorText</item>
        <item name="colorControlNormal">@color/colorText</item>

        //added attributes
        <item name="colorControlActivated">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorText</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorText</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark_colorText</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dark_colorText</item>
        <item name="android:textColorPrimary">@color/dark_colorText</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ShowCaseViewStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/transparent2</item>
        <item name="sv_showcaseColor">@color/dark_colorText</item>
        <item name="sv_buttonText">Continue</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseTitleStyle</item>

    </style>

    <style name="ShowCaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


</resources>
